<form action="<%= categories_path %>" method="post" class="max-w-lg mx-auto px-6">
  <h1 class="text-3xl font-bold pb-5">New Category</h1>

  <div class="mb-4">
    <label for="name" class="block text-gray-700 font-bold mb-2">Name</label>
    <input type="text" id="name" name="category[name]" class="w-full px-3 py-2 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:border-blue-500">
  </div>

  <div class="flex justify-end">
    <button type="submit" class="bg-blue-500 text-white px-6 py-2 rounded-full text-lg font-semibold hover:bg-blue-600 transition duration-300">
      Create Category
    </button>
  </div>
</form>
