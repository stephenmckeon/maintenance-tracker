<div class="flex items-center justify-between">
  <h1 class="text-3xl font-bold mb-6">Categories</h1>
  <a href="<%= new_category_path %>" class="text-1xl bg-blue-500 text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-blue-600 transition duration-300">
    New Category
  </a>
</div>

<% @categories.each do |category| %>
  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-4">
      <%= category.name %>
    </h2>
  </div>
<% end %>
