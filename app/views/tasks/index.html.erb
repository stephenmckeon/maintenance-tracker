<div class="flex items-center justify-between">
  <h1 class="text-4xl font-bold mb-6">Tasks</h1>
  <a href="<%= new_task_path %>" class="bg-blue-500 text-white px-6 py-3 rounded-full text-lg font-semibold hover:bg-blue-600 transition duration-300">
    New Task
  </a>
</div>

<% @categories.each do |category| %>
  <div class="mb-6">
    <h2 class="text-xl font-semibold mb-4"><%= category.name %></h2>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4">
      <% category.tasks.each do |task| %>
        <div class="bg-white rounded shadow-md p-4">
          <h3 class="text-lg font-semibold mb-2">
            <%= task.name %> - <%= task.interval.capitalize %>
          </h3>
          <p class="text-gray-700 mb-4"><%= task.description %></p>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
